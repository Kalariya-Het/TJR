# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=green_hydrogen_db
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development

# Blockchain Configuration
ETHEREUM_RPC_URL=http://localhost:8545
ORACLE_CONTRACT_ADDRESS=0x0DCd1Bf9A1b36cE34237eEaFef220932846BCD82
CREDIT_CONTRACT_ADDRESS=0x9A676e781A523b5d0C0e43731313A708CB607508
